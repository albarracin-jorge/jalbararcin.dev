---
import { Image } from "astro:assets"
const { company, years, role, description, icon} = Astro.props
---
<article class="
			flex flex-row items-center justify-between 
			py-2 px-4 gap-4 min-w-[320px]
			rounded-lg
			hover:bg-slate-200	dark:hover:bg-slate-800
			transition duration-300
		">
	<div>
		<h2 class="text-lg md:text-xl">{company}</h2>
		<p class="text-[10px] md:text-sm">{years}</p>
		<p class="text-[10px] md:text-sm">{role || ""}</p>
		<hr class="my-1 border-zinc-800 dark:border-zinc-100">
		<p class="text-[13px] md:text-lg">{description}</p>
	</div>
	{icon ? 
		<Image 
			src={icon} 
			alt="company icon"
			width={50}
			class:list={["rounded-full", "w-12", "h-12"]}
		/> : <></>}
</article>