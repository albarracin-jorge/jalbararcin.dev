---
import { Image } from "astro:assets"
const { company, years, role, description, icon} = Astro.props
---
<div class="
			flex flex-row items-center justify-between 
			py-2 px-4 gap-4 w-full min-w-[360px]
			rounded-lg
			hover:bg-stone-300	dark:hover:bg-zinc-800
		">
	<div>
		<h2 class="text-lg">{company}</h2>
		<p class="text-[10px]">{years}</p>
		<p class="text-[10px]">{role || ""}</p>
		<hr class="my-1 border-zinc-800 dark:border-zinc-100">
		<p class="text-[13px]">{description}</p>
	</div>
	{icon ? 
		<Image 
			src={icon} 
			alt="company icon"
			width={50}
		/> : <></>}
</div>