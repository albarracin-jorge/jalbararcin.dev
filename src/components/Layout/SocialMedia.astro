---
import { Image } from "astro:assets";
const {
    linkedin,
    github,
    linkedInLogo,
    gitHubLogo
} = Astro.props;

---
<div class="flex">
    <a href={linkedin}>
        <Image
            class="dark:filter dark:invert w-8 md:w-10"
            src={linkedInLogo}
            alt="linkedin logo"
            width={40}
        />
    </a>
    <a href={github} class="hover:shadow-2xl">
        <Image
            class="dark:filter dark:invert w-8 md:w-10"
            src={gitHubLogo}
            alt="github logo"
            width={40}
        />
    </a>
</div>