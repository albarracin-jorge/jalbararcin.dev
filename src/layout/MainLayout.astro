---
import { Image } from "astro:assets";

import linkedInLogo from "../assets/linkedin.svg";
import githubLogo from "../assets/github.svg";

const linkedin = "https://www.linkedin.com/in/jorge-albarracin/";
const github = "https://github.com/albarracin-jorge";
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<title>Document</title>
	</head>
	<body class="bg-indigo-100 dark:bg-zinc-900">
		<header
			class="h-16 xl:h-20 shadow-xl bg-indigo-200 dark:bg-zinc-800 flex justify-around items-center"
		>
			<h3 class="dark:text-slate-100">jalbarracin.dev</h3>
			<div class="flex">
				<a href={linkedin}>
					<Image
						class="dark:filter dark:invert"
						src={linkedInLogo}
						alt="linkedin logo"
						width={40}
					/>
				</a>
				<a href={github}>
					<Image
						class="dark:filter dark:invert"
						src={githubLogo}
						alt="github logo"
						width={40}
					/>
				</a>
			</div>
		</header>
		<slot />
	</body>
</html>

<style>
	.filters {
		filter: invert(42%) sepia(93%) saturate(1352%) hue-rotate(87deg)
			brightness(119%) contrast(119%);
	}
	body {
		font-family:
			system-ui,
			-apple-system,
			BlinkMacSystemFont,
			"Segoe UI",
			Roboto,
			Oxygen,
			Ubuntu,
			Cantarell,
			"Open Sans",
			"Helvetica Neue",
			sans-serif;
	}
</style>
